{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "noEmit": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": ".",
    "rootDir": "src",
    "baseUrl": "./"
  },
  "include": ["src"],
  "exclude": ["**/node_modules"]
}
